{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "*": ["*", "src/*"]
    },
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "alwaysStrict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "noImplicitAny": true,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  }
}
